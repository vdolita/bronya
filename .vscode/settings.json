{
    "[typescript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        }
    },
    "[typescriptreact]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        }
    },
    "[typescript][typescriptreact]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "eslint.debug": true,
    "cSpell.words": [
        "ahooks",
        "Authed",
        "bronya",
        "clsx",
        "hookform",
        "PGDB",
        "pgsql",
        "sdui",
        "shadcn",
        "tailwindcss",
        "tanstack",
        "Vals"
    ],
    "editor.fontSize": 16,
    "[prisma]": {
        "editor.formatOnSave": true
    }
}